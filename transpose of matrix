#include <stdio.h>

int main() {
    int a[4][4],b[4][4],i,j;
    printf("1st matrix:\n");
for(int i=0;i<4;i++){
    for(int j=0;j<4;j++){
        scanf("%d",&a[i][j]);
    }}
    for(int i=0;i<4;i++){
    for(int j=0;j<4;j++){
    b[j][i]=a[i][j];}}
    for(int i=0;i<4;i++){
    for(int j=0;j<4;j++){
    printf("%d ",b[i][j]);}
    printf("\n");
    }

}
