#include <stdio.h>
#include <string.h>
int main(){
    char a[]="apple",b[]="apricot";
    char *x=a;
    char *y=b;
    int index=0;
    while(*x!='\0' && *y!='\0'){
        if(*x!=*y){
            printf("Strings differ at index %d\n", index);
            printf("s1 has '%c', s2 has '%c'\n",*x, *y);
            return 0;
        }
        x++;
        y++;
        index++;}
        if(*x==*y){
             printf("Strings are identical\n");
        }
        else
            printf("Strings differ in length");}
