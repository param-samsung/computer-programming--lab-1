#include <stdio.h>
int main() {
    int a[4][4],i,j;
    printf("enter the matrix\n");
    for(i=0;i<4;i++){
        for(j=0;j<4;j++){
        scanf("%d",&a[i][j]);}}
        int  b[16];
       int k=0;
         for(i=0;i<4;i++){
        for(j=0;j<4;j++){
            b[k]=a[i][j];
            k++;}}
            for(i=0;i<15;i++)
            for(k=0;k<15-i;k++){
            if(b[k]>b[k+1]){
                int c=b[k];
                b[k]=b[k+1];
                b[k+1]=c;
            }}
            printf("sorted array in 1D:");
             for(i=0;i<16;i++){
                 printf("%d ",b[i]);
             }}
        
        
        
        
        
    
