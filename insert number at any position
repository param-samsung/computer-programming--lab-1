#include <stdio.h>

int main() {
    int n;
    printf("Enter number of elements: ");
    scanf("%d", &n);
    int a[n],b[n+1],num,i,c;
    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &a[i]);
    }
     printf("Enter position to insert number: ");
    scanf("%d", &c);
    printf("Enter number to insert at given position : ");
    scanf("%d", &num);
    i=0;
    while(i<c){
        b[i]=a[i];
        i++;
    }
    b[c] = num;
    while(i<n){
        b[i+1]=a[i];
        i++;
    }
    printf("Array after insertion:\n");
    for(i = 0; i < n+1; i++) {
        printf("%d ", b[i]);
    }
}
