#include <stdio.h>
int main() {
    int a[3][3],i,j, *max,*min;
    printf("enter the matrix\n");
    for(i=0;i<3;i++){
        for(j=0;j<3;j++){
        scanf("%d",&a[i][j]);}}
        max=&a[0][0];
        min=&a[0][0];
        for(i=0;i<3;i++){
        for(j=0;j<3;j++){
            if(a[i][j]>*max)
            max=&a[i][j];
         else if(a[i][j]<*min)
            min=&a[i][j];
        }}
        printf("maximum in matrix: ");
        printf("%d\n",*max);
        printf("minimum in matrix: ");
        printf("%d",*min);
        
        
        
    
}
